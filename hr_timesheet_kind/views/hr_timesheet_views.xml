<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_timesheet_line_view_tree" model="ir.ui.view">
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_tree" />
        <field name="arch" type="xml">
            <field name="task_id" position="after">
                <field name="kind_id" options="{'no_create': True}" />
            </field>
        </field>
    </record>

    <record id="hr_timesheet_line_view_form" model="ir.ui.view">
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_form"/>
        <field name="arch" type="xml">
            <field name="task_id" position="after">
                <field name="kind_id" options="{'no_create': True}" />
            </field>
        </field>
    </record>

    <record id="hr_timesheet_line_view_search" model="ir.ui.view">
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_search" />
        <field name="arch" type="xml">
            <field name="task_id" position="after">
                <field name="kind_id" />
            </field>
            <filter name="groupby_task" position="after">
                <filter string="Kind" name="groupby_kind" domain="[]" context="{'group_by': 'kind_id'}"/>
            </filter>
        </field>
    </record>

</odoo>
