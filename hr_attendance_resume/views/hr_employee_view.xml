<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_employee_form" model="ir.ui.view">
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_employee_calendar_planning.view_employee_form" />
        <field name="arch" type="xml">
            <field name="resource_calendar_id" position="attributes">
                <attribute name="invisible">0</attribute>
            </field>
        </field>
    </record>
    <record id="view_employee_form_inherit_hr_attendance" model="ir.ui.view">
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_attendance.view_employee_form_inherit_hr_attendance" />
        <field name="arch" type="xml">
            <field name="attendance_state" position="after">
               <button class="oe_stat_button" type="object"
                       icon="fa-users" name="button_show_attendance_resumes" >
                   <field name="count_attendances_resumes" widget="statinfo"
                          string="Attendances resume" />
               </button>
            </field>
        </field>
    </record>
</odoo>
