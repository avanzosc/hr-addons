<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_employee_form_ihn_hr_school" model="ir.ui.view">
        <field name="name">view.employee.form.ihn.hr.school</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">
            <button name="toggle_active" position="after">
               <button name="button_show_tutored_students" type="object" >
                   <field name="count_tutored_students" widget="statinfo" string="Tutored students"/>
               </button>
            </button>
        </field>
    </record>
</odoo>
