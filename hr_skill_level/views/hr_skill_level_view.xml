<odoo>
    <record id="view_hr_skill_level_tree" model="ir.ui.view">
        <field name="name">hr.skill.level.tree</field>
        <field name="model">hr.skill</field>
        <field name="inherit_id" ref="hr_skill.view_hr_skill_tree" />
        <field name="arch" type="xml">
            <field name="employee_ids" position="after">
                <field name="level" string="Level"/>
            </field>
        </field>
    </record>

    <record id="view_skill_level_form" model="ir.ui.view">
        <field name="name">hr.skill.level.form</field>
        <field name="model">hr.skill</field>
        <field name="inherit_id" ref="hr_skill.view_skill_form" />
        <field name="arch" type="xml">
            <field name="parent_id" position="after">
                <field name="level" string="Level"/>
            </field>
        </field>
    </record>
</odoo>
