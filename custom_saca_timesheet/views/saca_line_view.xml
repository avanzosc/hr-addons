<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="saca_line_form_view" model="ir.ui.view">
        <field name="model">saca.line</field>
        <field name="inherit_id" ref="custom_saca_purchase.saca_line_form_view"/>
        <field name="arch" type="xml">
            <page name="descarga" position="inside">
                <group string="Times">
                    <field name="timesheet_ids" nolabel="1" attrs="{'readonly': [('is_canceled', '=', True)]}">
                        <tree editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="date" optional="show" readonly="1"/>
                            <field name="project_id" optional="show" readonly="1"/>
                            <field name="task_id" optional="show" readonly="1"/>
                            <field name="employee_id" optional="hide"/>
                            <field name="time_start" optional="show" widget="float_time"/>
                            <field name="time_stop" optional="show" widget="float_time"/>
                            <field name="unit_amount" optional="show" widget="float_time" sum="Amount Duration"/>
                            <field name="company_id" invisible="1"/>
                        </tree>
                    </field>
                </group>
            </page>
            <page name="killing" position="inside">
                <group string="Classified">
                    <field name="clasified_ids" nolabel="1" attrs="{'readonly': [('is_canceled', '=', True)]}">
                        <tree editable="bottom">
                            <field name="date" optional="show"/>
                            <field name="project_id" optional="show"/>
                            <field name="task_id" optional="show"/>
                            <field name="employee_id" optional="hide"/>
                            <field name="time_start" optional="show" widget="float_time"/>
                            <field name="time_stop" optional="show" widget="float_time"/>
                            <field name="unit_amount" optional="show" widget="float_time" sum="Amount Duration"/>
                            <field name="company_id" invisible="1"/>
                        </tree>
                    </field>
                </group>
            </page>
        </field>
    </record>
</odoo>
