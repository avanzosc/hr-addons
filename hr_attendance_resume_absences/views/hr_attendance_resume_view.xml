<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="hr_attendance_resume_view_tree" model="ir.ui.view">
        <field name="model">hr.attendance.resume</field>
        <field name="inherit_id" ref="hr_attendance_resume.hr_attendance_resume_view_tree" />
        <field name="arch" type="xml">
            <field name="difference_minutes" position="after">
                <field name="treated" />
                <field name="hr_leave_allocation_id" invisible="1"/>
            </field>
        </field>
    </record>
    <record id="hr_attendance_resume_view_search" model="ir.ui.view">
        <field name="model">hr.attendance.resume</field>
        <field name="inherit_id" ref="hr_attendance_resume.hr_attendance_resume_view_search" />
        <field name="arch" type="xml">
            <field name="day_week" position="after">
                <field name="hr_leave_allocation_id" />
                <separator/>
                <filter name="treated" string="Treated" domain="[('treated', '=', True)]" />
                <filter name="notreated" string="No treated" domain="[('treated', '=', False)]" />
                <filter name="with-allocation-leave" string="With allocacion leave" domain="[('hr_leave_allocation_id', '!=', False)]" />
            </field>
            <filter name="group-day-week" position="after">
                <filter string="Treated" name="group-treated" domain="[]" context="{'group_by':'treated'}"/>
                <filter string="Allocation leave" name="group-allocation-leave" domain="[]" context="{'group_by':'hr_leave_allocation_id'}"/>
            </filter>
        </field>
    </record>
    <record id="hr_attendance_resume_view_form" model="ir.ui.view">
        <field name="model">hr.attendance.resume</field>
        <field name="inherit_id" ref="hr_attendance_resume.hr_attendance_resume_view_form" />
        <field name="arch" type="xml">
            <field name="difference_minutes" position="after">
                <field name="treated" />
                <field name="hr_leave_allocation_id" />
            </field>
        </field>
    </record>
</odoo>
